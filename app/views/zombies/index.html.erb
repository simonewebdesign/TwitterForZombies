<h2>Listing zombies</h2>
<%= link_to 'New Zombie', new_zombie_path %>

<table>
  <tr>
  	<th>ID</th>
    <th>Name</th>
    <th>Graveyard</th>
    <th># tweets</th>
    <th colspan=3>Actions</th>
  </tr>

<% @zombies.each do |zombie| %>
  <tr>
  	<td><%= zombie.id %></td>
  	<td><%= zombie.name %></td>
  	<td><%= zombie.graveyard %></td>
  	<td><%= zombie.tweets.count %></td>
    <td><%= link_to 'Show', zombie %></td>
    <td><%= link_to 'Edit', edit_zombie_path(zombie) %></td>
    <td><%= link_to 'Destroy', zombie, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<% if @zombies.empty? %>
<em>No zombies found</em>
<% end %>

